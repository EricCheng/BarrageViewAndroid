<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginBottom="5dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@android:color/white"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:roundAsCircle="false" />

    <com.pancheng.barrageview.ui.BarrageViewWithImg
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/barrageviewwithimg"
        >

    </com.pancheng.barrageview.ui.BarrageViewWithImg>

</RelativeLayout>